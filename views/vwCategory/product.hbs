    <script>
        const dateInput = document.getElementById("dateInput").value;
        const date = dateInput.split(" ")[0];
        const time = dateInput.split(" ")[1];

        const day = date.split('/')[0];
        const month = date.split('/')[1];
        const year = date.split('/')[2];

        const h = time.split(':')[0];
        const m = time.split(':')[1];

        let countDownDate = new Date(+year, +month - 1, +day, +h, +m, 0, 0).getTime();
        let x = setInterval(function () {
            // Get today's date and time
            let now = new Date().getTime();
            // Find the distance between now and the count down date
            let distance = countDownDate - now;

            // Time calculations for days, hours, minutes and seconds
            let days = Math.floor(distance / (1000 * 60 * 60 * 24));
            let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            let seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // Display the result in the element with id="demo"
            let countdown = '';
            if (days != 0) {
                countdown += days + " ngày "
            }
            if (hours != 0) {
                countdown += hours + " giờ "
            }
            if (minutes != 0) {
                countdown += minutes + " phút "
            }
            countdown += seconds + " giây";
            document.getElementById("dateEnd").innerHTML = countdown;

            // If the count down is finished, write some text
            if (distance < 0) {
                clearInterval(x);
                document.getElementById("dateEnd").innerHTML = "Hết hạn"

            }
        }, 10);
    </script>

