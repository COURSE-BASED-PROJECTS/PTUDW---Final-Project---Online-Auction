            <div class="column is-12">
                <div class="level columns">
                <span class="column is-12-mobile">Giá hiện tại: <strong> {{format_number
                        this.product.PriceCurrent}}</strong></span>
                    <span class="column is-12-mobile level-right has-text-right-tablet">Giá mua ngay: <strong> {{format_number
                            this.product.PriceWin}}</strong></span>
                </div>
            </div>

            {{#if auth}}
                <div class="column is-12">
                    <div class="level columns">
                     <span class="column is-12-mobile">Người bán:
                        <strong><a href="/account/infoHistory/{{this.product.Seller}}">#{{this.product.Seller}}</a></strong>
                         <span class="tag is-primary">{{this.point_percent_seller}}%</span>
                     </span>

                        <span  class="column is-12-mobile has-text-right">Người giữ giá:
                            <strong>#{{mask_username this.product.Bidder}}</strong>
                            <span class="tag is-primary">{{this.point_percent_bidder}}%</span>
                        </span>
                    </div>
                </div>
            {{/if}}


            <span class="column is-12 ">Bước giá: <strong>{{format_number
                    this.product.stepPrice}}</strong>
<!--                <hr class="has-background-grey"/>-->
            </span>

            {{#if this.product.isVerify}}

                <span class="column is-12 ">
                    <img src="/img/logo/star.png"  height="32" width="32">
                    <strong>Sản phẩm cần người mua uy tín</strong>

                    <hr class="has-background-grey"/>
                </span>

            {{else}}

                <span class="column is-12 ">
                    <img src="/img/logo/rating_off.png" height="32" width="32">
                    <strong>Sản phẩm không cần người mua uy tín</strong>

                    <hr class="has-background-grey"/>
                </span>

            {{/if}}


            <span class="column is-12  pt-0">Thời điểm đăng: <strong>{{this.product.DateStart}}</strong></span>
            <input class="is-block is-hidden" id="dateInput" value="{{this.product.DateEnd}}"/>

            <span class="column is-12  pb-0">Thời điểm kết thúc: <strong id="dateEnd"
                                                                         class="has-text-danger">{{this.product.DateEnd}}</strong>
            <hr class="has-background-grey"/></span>

            {{#if this.isAuth}}
                <div class="column is-12 card-content box m-0">
                    <header class="card-header">
                        <p class="card-header-title">
                            Thông tin sản phẩm
                        </p>

                        {{#if this.isRightSeller}}
                            <a class="card-header-icon card-toggle" onclick="modifyDesc();">
                                <i class="fas fa-edit"></i>
                            </a>
                        {{/if}}

                    </header>

                    <div class="card-content">
                        {{{this.product.Description}}}
                    </div>

                    <div class="card-content">

                        <div class="modifyDescription is-hidden">
                            <div class="notification is-warning check-info is-hidden">
                                <strong>Vui lòng thêm mô tả sản phẩm</strong>
                            </div>
                            <label class="label" for="txtFullDesc">Bổ sung:</label>

                            <div class="control">
                                <form action="/product/update/{{this.product.ProID}}" method="post" id="frmUpdate">
                                <textarea class="textarea"
                                          id="txtFullDesc"
                                          name="FullDesc"
                                          placeholder="Nhập ở đây">

                                </textarea>

                                </form>

                                <a class="button is-success fa fa-check"
                                   href="javascript: $('#frmUpdate').submit();"> Lưu</a>

                            </div>
                        </div>


                    </div>

                </div>

            {{else}}

                <div class="column is-12 card-content box m-0">
                    <div class="card-header-title">
                        Thông tin sản phẩm
                    </div>
                    <div class="card-content ">
                        {{{this.product.Description}}}
                    </div>
                </div>

            {{/if}}


            {{#if auth}}
                {{#if this.isExpired}}
                    <div class="column is-12 ">
                        <hr class="has-background-grey"/>
                    </div>
                    <div class="column is-12 level">
                        <div class="level-item has-text-centered">
                            <div class="tag is-danger is-light is-large ">Hết phiên đấu giá</div>
                        </div>
                    </div>

                {{else}}


                    {{#if this.product.isAuction}}
                        {{#if this.isLockAuction}}
                            <div class="column is-12 ">
                                <hr class="has-background-grey"/>
                            </div>

                            <div class="column is-12 level">
                                <div class="level-item has-text-centered">
                                    <div class="tag is-danger is-light is-large ">Bạn không được phép đấu giá</div>
                                </div>
                            </div>
                        {{else}}
                            <div class="column is-12 ">
                                <hr class="has-background-grey"/>
                            </div>
                            <div class="column is-8 ">
                                <form action="/product/setPrice" method="post" id="frmAuction">
                                    <input class="input is-large" type="number" placeholder="Đấu giá"
                                           id="number_auction"
                                           name="number" step="{{this.product.stepPrice}}" pattern="[0-9]*"
                                           value="{{this.product.PriceCurrent}}">
                                    <input type="number" value="{{this.product.ProID}}" class="is-hidden" name="id"
                                           id="ProID">
                                </form>
                            </div>

                            <div class="column is-4 has-text-centered has-text-weight-bold">
                                <a class="box has-background-primary"
                                   onclick="modal_verify();">Đấu giá</a>
                            </div>
                        {{/if}}

                    {{/if}}

                    {{#unless  this.isLockAuction}}
                        <div class="column is-12 ">
                            <form action="/product/buynow/{{this.product.ProID}}" method="post"
                                  id="frmBuynow"></form>
                            <a class="box has-background-warning has-text-centered has-text-weight-bold"
                               onclick="modal_announce();">MUA NGAY</a>
                        </div>
                    {{/unless}}

                {{/if}}

            {{/if}}
        </div>
    </div>


    <div class="column is-12 p-2">
        <hr class="has-background-grey"/>
        <section class="section">
            <div class="is-size-4-tablet is-size-5-mobile m-3 has-text-centered has-text-weight-bold">
                Bạn có thể thích
            </div>
            <div id="slider" style="overflow: hidden">
                <!-- Start Carousel -->
                <div class="carousel">

                    {{#each this.relatedProducts}}
                        <div class="item-{{ProID}} mx-2">
                            <!-- Slide Content -->
                            <div class="card" >
                                <div class="card-image">
                                    <figure class="image is-16by9 is-covered">
                                        <a href="/product/detail/{{ProID}}">
                                            <img
                                                    src="/img/product/{{ProID}}/1.png"
                                                    alt="{{ProName}}"
                                            />
                                        </a>
                                    </figure>
                                </div>
                                <div class="card-content">
                                    <div class="has-text-centered has-text-weight-bold">{{ProName}}</div>
                                    <!--                                <div class="item__description">-->
                                    <!--                                    Ici une petite description pour tester le slider-->
                                    <!--                                </div>-->
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    <!-- End Carousel -->
                </div>
            </div>
        </section>
    </div>


</div>