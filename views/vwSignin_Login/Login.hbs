<div class="has-text-centered">

    <div class="column is-4 is-inline-block box my-5">
        <div class="card-header-title is-inline-block is-size-4-tablet is-size-4-mobile">ĐĂNG NHẬP</div>
        <div class="field has-text-left">
            <label class="label">Tài khoản</label>
            <div class="control has-icons-left has-icons-right " >
                <input
                        class="input is-success"
                        type="text"
                        placeholder="Nhập tài khoản"
                        value="bulma"
                />
                <span class="icon is-small is-left">
                  <i class="fas fa-user"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fas fa-check"></i>
                </span>
            </div>
            <p class="help is-success">Tài khoản đã tồn tại</p>
        </div>

        <div class="field has-text-left">
            <label class="label">Mật khẩu</label>
            <div class="control has-icons-left has-icons-right" >
                <input
                        class="input is-danger"
                        type="password"
                        placeholder="Nhập mật khẩu"
                        value="hello@"
                />
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fa fa-exclamation-triangle"></i>
                </span>
            </div>
            <p class="help is-danger">Mật khẩu không hợp lệ</p>
        </div>


        <div class="field is-grouped has-text-left">
            <div class="control">
                <button class="button is-link">Đăng nhập</button>
            </div>
        </div>
    </div>
</div>