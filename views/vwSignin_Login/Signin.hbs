{{#section 'css'}}
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}
{{#section 'js'}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"
            referrerpolicy="origin"></script>
    <script>
        $('#frmRegister').on('submit', function (e) {
            e.preventDefault();
            const name = $('#txtName').val();
            const username = $('#txtUsername').val();
            const address = $('#txtAdrr').val();
            const email = $('#txtEmail').val();
            const password = $('#txtPassword').val();
            const passwordConfirm = $('#txtPasswordConfirm').val();

            $.getJSON(`/account/is-available?username=${username}`, function (data) {
                if (data === false) {
                    $('#check-account').removeClass("is-hidden");
                    return;
                } else {
                    $('#check-account').toggleClass("is-hidden");
                }
            });

            if (password !== passwordConfirm) {
                $('#check-pass').removeClass("is-hidden");
                return;
            } else {
                $('#check-pass').toggleClass("is-hidden");
            }

            if (!($('#txtCheckbox').is(':checked'))) {
                $('#check-box').removeClass("is-hidden");
                return;
            } else {
                $('#check-box').toggleClass("is-hidden");
            }

            if (name && firstPrice && winPrice && dateEnd)
                $('#frmRegister').off('submit').submit();
            else {
                $('.check-info').removeClass('is-hidden');
            }
        });

        $('#datetimepicker').datetimepicker({
            format: 'd/m/Y',
            mask: true,
        });

    </script>
{{/section}}

<form id="frmRegister" method="post">
    <div class="has-text-centered">
        <div class="column is-4 is-inline-block box my-5">
            <div class="notification is-warning is-hidden check-info">
                <strong>Vui lòng điền đầy đủ thông tin</strong>
            </div>

        <div class="card-header-title is-inline-block is-size-4-tablet is-size-4-mobile">ĐĂNG KÝ</div>
        <div class="field has-text-left">
            <label class="label">Họ tên</label>
            <div class="control">
                <input class="input" type="text" placeholder="Nhập họ tên" />
            </div>

            <div class="field has-text-left">
                <label class="label">Địa chỉ</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Nhập địa chỉ"/>
                </div>
            </div>

            <div class="field has-text-left">
                <label class="label">Email</label>
                <div class="control has-icons-left has-icons-right">
                    <input
                            class="input is-danger"
                            type="email"
                            placeholder="Nhập Email"
                            name="email"
                            id="txtEmail"
                            value="@gmail.com"
                    />
                    <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
                    <span class="icon is-small is-right">
<!--                  <i class="fa fa-exclamation-triangle"></i>-->
                </span>
                </div>
                <p class="help is-danger">Email không hợp lệ</p>
            </div>

            <div class="field has-text-left">
                <label class="label" for="stepPrice">Ngày sinh</label>
                <div class="control has-icons-left has-icons-right">
                    <input
                            class="input is-info"
                            type="text"
                            id="datetimepicker"
                            name="dayOfBirth"
                    />
                    <span class="icon is-small is-left">
                  <i class="fa fa-calendar-day"></i>
                </span>
                    <span class="icon is-small is-right">
                </span>
                </div>
            </div>

            <hr class="has-background-grey-dark">

            <div class="field has-text-left">
                <label class="label">Tài khoản</label>
                <div class="control has-icons-left has-icons-right ">
                    <input
                            class="input"
                            type="text"
                            placeholder="Nhập tài khoản"
                            name="username"
                            id="txtUsername"
                    />
                    <span class="icon is-small is-left">
                  <i class="fas fa-user"></i>
                </span>
                    <span class="icon is-small is-right">
<!--                  <i class="fas fa-check"></i>-->
                </span>
                </div>
                <p class="help is-success is-hidden" id="check-account">Tài khoản đã tồn tại</p>
            </div>

            <div class="field has-text-left">
                <label class="label" for="txtPassword">Mật khẩu</label>
                <div class="control has-icons-left has-icons-right">
                    <input
                            class="input"
                            type="password"
                            placeholder="Nhập mật khẩu"
                            name="password"
                            id="txtPassword"
                    />
                    <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
                    <span class="icon is-small is-right">
<!--                  <i class="fa fa-exclamation-triangle"></i>-->
                </span>
                </div>
                <!--            <p class="help is-danger">Mật khẩu không hợp lệ</p>-->
            </div>

            <div class="field has-text-left">
                <label class="label" for="txtPasswordConfirm">Nhập lại mật khẩu</label>
                <div class="control has-icons-left has-icons-right">
                    <input
                            class="input"
                            type="password"
                            placeholder="Nhập mật khẩu"
                            id="txtPasswordConfirm"
                    />
                    <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
                    <span class="icon is-small is-right">
<!--                  <i class="fa fa-exclamation-triangle"></i>-->
                </span>
                </div>
                <p class="help is-danger is-hidden" id="check-pass">Mật khẩu không trùng khớp</p>
            </div>

            <div class="field has-text-left">
                <div class="control">
                    <label class="checkbox" for="txtCheckbox">
                        <input type="checkbox" id="txtCheckbox"/>
                        Tôi đồng ý với <a href="#">điều khoản và điều kiện</a>
                    </label>
                    <p class="help is-warning is-hidden" id="check-box">Vui lòng đồng ý điều khoản!</p>
                </div>
            </div>

            <div class="field is-grouped has-text-left">
                <div class="control">
                    <button class="button is-link" type="submit">Đăng ký</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Hủy</button>
                </div>
            </div>

        </div>
    </div>
</form>